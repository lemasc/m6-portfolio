---
import { classNames } from "@/utils";
import { Navbar } from "@/components/Navbar";
import "@fontsource/mitr/300.css";
import "@fontsource/mitr/400.css";
import "@fontsource/mitr/500.css";
import "@fontsource/mitr/600.css";
import "../styles/globals.css";

interface Props {
  title: string;
  transparent?: boolean;
}

const { title, transparent } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body class="font-light h-full min-h-screen flex flex-col">
    <Navbar client:load>
      <span>Nav</span>
    </Navbar>
    <div class={classNames(transparent && "-mt-16", "h-full flex-1 flex-grow")}>
      <slot />
    </div>
  </body>
</html>
