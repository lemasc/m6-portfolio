  Props as SkillImageProps,
} from "../../components/SkillImage.astro";
import { classNames } from "@/utils";

import { defaultClassName } from "./statics";
import Tweet from "./Tweet.astro";

const images: SkillImageProps[] = [
  {
    src: "/logos/html5.svg",
