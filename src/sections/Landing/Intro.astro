---
import { classNames } from "@/utils";
import { Image } from "@astrojs/image/components";
import { defaultClassName } from "./statics";
import Typewriter from "@/components/markdown/Typewriter/index.astro";
---

<section
  id="intro"
  class={classNames(
    `flex flex-col justify-center bg-yellow-50`,
    defaultClassName
  )}
>
  <div
    class="flex-1 relative flex-grow w-full flex flex-col sm:flex-row md:flex-col lg:flex-row h-full items-stretch"
  >
    <div class="absolute top-0 right-0 md:left-0 md:bottom-0 p-6 select-none">
      <span
        class="font-serif font-extrabold text-5xl sm:text-7xl text-yellow-500 opacity-30"
        >PORTFOLIO</span
      >
    </div>
    <div class="flex flex-col flex-grow items-center justify-center p-8">
      <div
        class="flex flex-col items-start justify-center gap-4 sm:gap-6 text-xl w-full max-w-2xl"
      >
        <p>ผมเป็น</p>
        <Typewriter
          strings={[
            "นักเรียน",
            "โปรแกรมเมอร์",
            "ฝ่ายเทคนิค",
            "นักตัดต่อวิดีโอ",
            "วิศวกรเสียง",
            "ทุกอย่างที่เกี่ยวกับเทคโนโลยี",
          ]}
        >
          <h1></h1>
        </Typewriter>
        <p class="text-xl">ยินดีต้อนรับเข้าสู่เว็บไซต์ครับ</p>
      </div>
    </div>
    <div
      class="flex items-end bg-white basis-1/3 lg:max-w-sm w-full justify-center pt-12 px-10"
    >
      <Image
        src="/images/me.png"
        width={342}
        height={720}
        fit={"contain"}
        class="max-h-[50vh] lg:max-h-[70vh] w-auto"
        alt="Me"
      />
    </div>
  </div>
</section>
